<h1 class="pb-4">Explore Latest</h1>


<div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
    <% if(typeof recipe !== 'undefined' && recipe.length > 0) { %>
    <% recipe.forEach((recipe, index)=> { %>
    <a href="/recipe/<%- recipe._id %>" class="col text-center category__link">
        <div class="category__img category__img--large shadow">
            <img src="/uploads/<%- recipe.image %>" loading="lazy" alt="<%- recipe.name %>">
        </div>
        <div class="pt-1 text-center"><%- recipe.name %></div>
    </a>
    <% }); %>
    <% } else { %>
    <p>No recipe found.</p>
    <% } %>
</div>